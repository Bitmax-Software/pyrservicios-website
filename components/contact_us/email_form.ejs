<form class="email_form needs-validation" novalidate submit="sendEmail" > 
  <h3>Contáctanos</h3>
    <div class="form-group">
      <label for="contact_name">Nombre</label>
      <input type="text" class="form-control" id="contact_name" aria-describedby="nameHelp" placeholder="Ingresa tu nombre" required>    </div>
      <div class="invalid-feedback">
        Porfavor ingresa un nombre
      </div>
      <div class="form-group">
        <label for="contact_email">Correo Electrónico</label>
        <input type="email" class="form-control" id="contact_email" aria-describedby="emailHelp" placeholder="Ingresa tu correo electrónico"required> 
        <div class="invalid-feedback">
          Porfavor ingresa un email válido
        </div>
      </div>
      <div class="form-group">
        <label for="contact_cel">Teléfono (Opcional)</label>
        <input type="text" class="form-control" id="contact_cel" aria-describedby="celHelp" placeholder="Ingresa tu numero de telefono (Opcional)">
      </div>
      <div class="form-group">
        <label for="contact_msg">Consulta</label>
        <textarea class="form-control" id="contact_msg" rows="3" required></textarea>
        <div class="invalid-feedback">
          Porfavor ingresa un resumen de tu solicitud
        </div>
      </div>
      <div class="text-center">
        <button type="submit" id="send_form" class="btn btn-primary btn-pyr"   >Enviar</button>
      </div>
   
  </form>